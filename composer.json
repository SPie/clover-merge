{
    "name": "synida/clover-merge",
    "description": "Merge two or more clover XML files.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dylan McGannon",
            "email": "me@dyl.dog"
        },
        {
            "name": "Ignacio Mu√±oz Fernandez",
            "email": "nmunozfernandez@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0.0",
        "ext-simplexml": "*",
        "php-ds/php-ds": "^v1.4.1",
        "symfony/console": "^6.0 | ^7.0"
    },
    "require-dev": {
        "kahlan/kahlan": "^5.1.3",
        "phan/phan": "^5.3.1",
        "squizlabs/php_codesniffer": "^3.6.2",
        "php-coveralls/php-coveralls": "^v2.5.2",
        "captainhook/captainhook": "^5.10"
    },
    "autoload": {
        "psr-4": {
            "Kavinsky\\CloverMerge\\": "src/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/kahlan",
        "phan": "env PHAN_DISABLE_XDEBUG_WARN=1 ./vendor/bin/phan",
        "sniff": "./vendor/bin/phpcs",
        "post-autoload-dump": "vendor/bin/captainhook install -f -s"
    },
    "suggest": {
        "ext-ds": "to improve performance and reduce memory usage"
    },
    "bin": [
        "clover-merge"
    ]
}
